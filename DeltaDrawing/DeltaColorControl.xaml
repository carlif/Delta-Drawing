<UserControl x:Class="DeltaDrawing.UI.DeltaColorControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cust="clr-namespace:DeltaDrawing.UI"
    Height="160" Width="150">
    <Grid>
        <StackPanel>
            <cust:DeltaChannelControl x:Name="AlphaChannel" LabelChannelText="Alpha" LabelDeltaText="aD" />
            <cust:DeltaChannelControl x:Name="RedChannel" LabelChannelText="Red" LabelDeltaText="rD" />
            <cust:DeltaChannelControl x:Name="GreenChannel" LabelChannelText="Green" LabelDeltaText="gD" />
            <cust:DeltaChannelControl x:Name="BlueChannel" LabelChannelText="Blue" LabelDeltaText="bD" />
            <StackPanel Margin="0,5,0,0">
                <Label x:Name="labelSwatch">Color</Label>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
