<UserControl x:Class="DeltaDrawing.UI.DeltaChannelControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="29" Width="150">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
            <Label x:Name="labelChannel" Width="39">Alpha</Label>
            <TextBox Name="textChannel" Width="40" TextChanged="onTextChanged" Padding="1,4,0,0"></TextBox>
            <Label x:Name="labelDelta" Width="24">aD</Label>
            <TextBox Name="textDelta" Width="40" TextChanged="onTextChanged" Padding="1,4,0,0"></TextBox>
        </StackPanel>
    </Grid>
</UserControl>
